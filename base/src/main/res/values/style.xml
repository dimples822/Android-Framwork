<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!--标题栏样式 Start-->

	<!--顶部标题栏样式-->
	<style name="default_title_bar_style">
		<item name="android:background">#ffdcd9cf</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">44dp</item>
	</style>

	<!--标题栏右边区域-->
	<style name="default_title_bar_right">
		<item name="android:textSize">16.0sp</item>
		<item name="android:textColor">#ff6b5547</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:layout_width">60dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingStart">5dp</item>
		<item name="android:paddingEnd">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>

	<!--标题栏中间标题-->
	<style name="default_title_bar_title">
		<item name="android:textSize">18.0sp</item>
		<item name="android:textColor">#ff6b5547</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:gravity">center</item>
	</style>

	<!--标题栏左边区域-->
	<style name="default_title_back_view" parent="@style/default_title_bar_style">
		<item name="android:layout_width">44dp</item>
		<item name="android:layout_height">44dp</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/btn_back</item>
		<!--设置按压效果-->
		<item name="android:foreground">?attr/selectableItemBackground</item>
		<item name="android:paddingStart">5dp</item>
		<item name="android:paddingEnd">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">21dp</item>
		<item name="android:text">@null</item>
		<item name="android:drawableLeft">@null</item>
		<item name="android:clickable">true</item>
	</style>

	<!--标题栏样式 End-->

</resources>